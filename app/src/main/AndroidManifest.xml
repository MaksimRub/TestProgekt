<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.CoolRacer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestProgekt">
        <service
            android:name="com.example.CoolRacer.MyService"
            android:enabled="true"
            android:exported="true"></service>

        <activity
            android:name="com.example.CoolRacer.MainScreen"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.CoolRacer.GameScreen"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.example.CoolRacer.ChoiceScreen"
            android:exported="true"
            android:screenOrientation="landscape" />
    </application>

</manifest>